<Window x:Class="TyoajanSeuranta.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TyoajanSeuranta"
        mc:Ignorable="d"
        Title="SignIn" Height="200" Width="300" ResizeMode="NoResize">
    <Grid>
		<StackPanel>
			<Label Content="Pin koodi:"  Width="200"/>
			<TextBox x:Name="txt_PinCode" Width ="200" Height="23" Margin="4" TextAlignment="Center"/>
			<Button x:Name="button_Ok" Content="Kirjaudu sisään" Margin="5" VerticalAlignment="Top" Width="120" Click="button_Ok_Click"/>
			<Button x:Name="button_Cancel" Content="Peruuta" VerticalAlignment="Top" Width="120" Click="button_Cancel_Click"/>
			<TextBlock x:Name="txt_signinMessages" TextAlignment="Center" Margin="5" Height="23" />
		</StackPanel>
	</Grid>
</Window>
